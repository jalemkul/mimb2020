#Example NAMD input for NPT simulation for CHARMM36 
#Temperature & pressure control using Langevin
# Start dynamics

#######################################################
#    PDB, PSF, PAR, VEL & INPUT PARAMETERS
#######################################################
coordinates     files/step4_mini.pdb 
structure       files/step3_pbcsetup.xplor.psf
                # (can be generated using CHARMM - write psf xplor card @unit)
parameters      toppar/par_all36m_prot.prm
parameters      toppar/toppar_water_ions_standalone.str

paraTypeCharmm  on 
mergeCrossterms yes   #To include CMAP correction

######################################################
# OUTPUT FILES
######################################################

binaryoutput    no 
outputname      equil 
dcdfile         equil.dcd
restartname     equil.rst

binaryrestart   no 

seed            12345
temperature     298.0
timestep        2.0
stepspercycle   20    #number_of_steps_before_making_new_pairlist

######################################################
# OUTPUT PARAMETERS
######################################################
outputEnergies  5000 #display every 10ps
outputTiming    5000 #display every 10ps
xstFreq         5000 #save every 10ps
dcdFreq         5000 #save every 10ps
restartfreq     5000 #update restart file every 10ps

rigidBonds all        #SHAKE_H-bonds
rigidTolerance 0.00001
rigidIterations      100
useSettle            on

# Do not use Drude polarizable model
drude           off

######################################################
# Temperature & Pressure Control
######################################################
Langevin                on
LangevinDamping         5.0
LangevinTemp            298.0
LangevinPiston          on
langevinPistonTarget    1.01325      ;# pressure in bar -> 1 atm
langevinPistonPeriod    200.         ;# oscillation period around 100 fs
langevinPistonDecay     100.         ;# oscillation decay time of 50 fs
langevinPistonTemp      298.0        ;# coupled to heat bath

######################################################
# NONBOND CUTOFF
######################################################
switching           on
vdwForceSwitching   on
cutoff              12.0
switchdist          10.0
pairlistdist        16.0

exclude         scaled1-4
1-4scaling      1.0
dielectric      1.0

######################################################
# CELL PARAMETERS
######################################################

useFlexibleCell   no
useGroupPressure  yes
cellBasisVector1    58   0   0       #not necessary if specify extendedSystem
cellBasisVector2     0  58   0
cellBasisVector3     0   0  58
cellOrigin 0 0 0 
wrapAll on
MARGIN  5.0

######################################################
# PMEwald
######################################################
PME yes
##PMEInterpOrder 6
PMEGridSizeX 56 
PMEGridSizeY 56
PMEGridSizeZ 56

########################################
# Restraint section                    #
# all heavy atoms restrained for equil #
########################################
constraints         on                      # really harmonic restraints, called 'constraints' for historical reasons
consexp             2                       # exponent for restraint function - 2 means harmonic
consref             files/restraint.pdb     # name of a PDB file with the ref. positions of atoms to be restrained
conskfile           files/restraint.pdb     # PDB file that contains force constants
conskcol            B                       # restraint force constants in this column of conskfile
constraintScaling   1                       # weight of restraints
selectConstraints   on
selectConstrX       on
selectConstrY       on
selectConstrZ       on              # restrain in all dimensions

# Run for 1.0 ns
run 500000
